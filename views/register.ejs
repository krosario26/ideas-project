<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <% include partials/pages/head.ejs %>
  </head>
  <body>
    <div class="container">
      <h1>Register</h1>
    </div>
    <!-- Sign In Form -->
    <form class="container" method="post" action="/register">
      <input class="input-block-level" type="text" name="username" placeholder="Username"/>
      <input class="input-block-level" type="password" name="password" placeholder="Password"/>
      <button type="submit" class="btn btn-warning">Sign Up</button> or <a href="/login">Sign In</a>
    </form>
    <!-- End of register Form -->

    <% include partials/pages/scripts.ejs %>
  </body>
</html>
